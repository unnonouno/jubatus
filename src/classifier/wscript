def options(ctx): pass

def configure(ctx): pass

def build(bld):
  bld.shlib(
    source = '''
        classifier_base.cpp
	perceptron.cpp
	pa.cpp
	pa1.cpp
	pa2.cpp
	cw.cpp	
	arow.cpp
	nherd.cpp
        soft_confidence_weighted.cpp
        classifier_factory.cpp
	''',
    target = 'jubatus_classifier',
    name = 'jubatus_classifier',
    includes = '.',
    use = 'PFICOMMON')

  bld.program(
     features = 'gtest',
     source = [
         'classifier_test.cpp',
         'classifier_factory.cpp'   
     ],
     target = "classifier_test",
     includes = '.',
     use = 'jubatus_classifier jubastorage')

  bld.install_files('${PREFIX}/include/jubatus/classifier', [
      'classifier_base.hpp',
      'classifier_factory.hpp',
      'classifier_type.hpp',
      ])
